        {{ 'mautic.opportunities.menu.edit'|trans({'%name%': entity.name}) }}
    {% else %}
        {{ 'mautic.opportunities.menu.new'|trans }}
    {% endif %}
{% endblock %}

{% block content %}
    {{ form_start(form) }}
    <div class="box-layout">
        <div class="col-md-12 height-auto">
            <div class="pa-md">
                <div class="row">
                    <div class="col-md-6">
                        {{ form_row(form.opportunityExternalId) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(form.name) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        {{ form_row(form.contact) }}
