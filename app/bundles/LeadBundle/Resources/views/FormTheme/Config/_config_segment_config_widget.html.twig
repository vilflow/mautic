{% block _config_segment_config_widget %}
<h4 class="fw-sb mt-48 mb-xs">{{ 'mautic.config.tab.segment_config'|trans }}</h4>
<div class="text-muted small pb-md">{{ 'mautic.core.config.header.segment_config.description'|trans }}</div>
<div class="row">
    <div class="panel panel-default mb-md">
        <div class="panel-body">
            <div class="row">
                {% for child in form.children %}
                <div class="col-xs-12">
                    {{ form_row(child) }}
                </div>
                {% endfor %}
            </div>
        </div>
    </div>
</div>
{% endblock %}
