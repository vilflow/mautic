                    <div class="col-md-6">
                        {{ form_row(form.event) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        {{ form_row(form.stage) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(form.amount) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        {{ form_row(form.abstractReviewResultUrl) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(form.invoiceUrl) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        {{ form_row(form.invitationUrl) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(form.suitecrmId) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{ form_end(form) }}

